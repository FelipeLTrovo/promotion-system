<p><%= I18n.t('.devise.mailer.email_changed.welcome') %> <%= @email %>!</p>

<% if @resource.try(:unconfirmed_email?) %>
  <p><%= I18n.t('.devise.mailer.email_changed.message') %> <%= @resource.unconfirmed_email %>.</p>
<% else %>
  <p><%= I18n.t('.devise.mailer.email_changed.message_done') %> <%= @resource.email %>.</p>
<% end %>
