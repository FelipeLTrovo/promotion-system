<%=form_with url: search_product_categories_path, method: :get do |f| %>
    <%= f.label :q, 'Busca' %>
    <%= f.text_field :q %>
    <%= f.submit 'Buscar', class: 'btn btn-primary' %>
<% end %>
<br />

<div>
<%= link_to 'Voltar', root_path, class: 'btn btn-secondary' %>
<%= link_to "Registrar #{t('activerecord.models.product_category.one')}", new_product_category_path, class: 'btn btn-success' %>
</div>

<% if @product_categories.empty? %>
    <h3>Nenhuma <%= t('activerecord.models.product_category.one') %> cadastrada</h3>
<% end%>

<% @product_categories.each do |product_category| %>
    <div class='card' style='width: 18rem;'>
        <div class='card-body'>
            <h3 class='card-title'><%= link_to product_category.name, product_category %></h3>
            <h4 class='card-subtitle'> <%= product_category.code %></h4>
            <%= link_to "Editar #{t('activerecord.models.product_category.one')}", 
                                    edit_product_category_path(product_category.id), class: 'btn btn-warning' %>
            <%= link_to "Deletar #{t('activerecord.models.product_category.one')}", 
                                    product_category_path(product_category.id), method: :delete, class: 'btn btn-danger' %>
        </div>
    </div>
<% end %>
